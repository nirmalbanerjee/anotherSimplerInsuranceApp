{
  "title": "Insurance App Dashboard",
  "uid": "insurance-app",
  "tags": ["insurance", "api"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "Total HTTP Requests",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(http_requests_total)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Request Rate",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{endpoint}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Requests by Status",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "sum by(status) (http_requests_total)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Auth Events",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "sum by(event_type) (auth_events_total)",
          "legendFormat": "{{event_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Policy Operations",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "sum by(operation) (policy_operations_total)",
          "legendFormat": "{{operation}}",
          "refId": "A"
        }
      ]
    }
  ]
}
